<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PdfViewer"
    android:fitsSystemWindows="true"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/login_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/register_test_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_button_fill_primary1"
            android:text="Login"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/register_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:background="@drawable/btn_gradient"
            android:textColor="@color/colorWhite"
            android:text="Register"/>
    </RelativeLayout>

    //include bottomsheet content here

    <include layout="@layout/bottom_sheet_login"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>